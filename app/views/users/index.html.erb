<div class="container main-container">
  <div class="row g-5">
    <% @users.each do |user| %>
      <% if user.role == 'Teacher' %>
        <div class="col-6">
          <%= link_to user do %>
            <div class="teacher-main" style="border:1px solid rgb(190,190,190); border-radius: 12px; padding: 1rem; background-color: white; display: flex;">
              <%# Teacher card left %>
              <div class="teacherCard-left">
                <div class="avatar"></div>
                <div class="teacherCard-body">
                  <div class="teacherCard-top">
                    <div class="teacherCard-middle">
                      <div class="teacherCard-name">
                        <%= user.username %>
                      </div>
                      <div class="teacherCard-info">
                        <span>Professional Teacher</span>
                      </div>
                      <div>
                        <span>From Singapore</span>
                      </div>
                    </div>
                  </div>
                  <div class="teacherCard-bottom mt-4">
                    <div class="teacherCard-teaches mb-2"><span>Teaches: English, Maths</span></div>
                    <div class="teacherCard-speaks"><span>Speaks: English</span></div>
                  </div>
                </div>
              </div>
              <%# Teacher card right %>
              <div class="teacherCard-right mt-4">
                <div class=star-ratings>
                  <% @avgRating.times do %>
                    <span><i class="bi bi-star-fill text-yellow"></i></span>
                  <% end %>
                  <% (5-@avgRating).times do %>
                    <span><i class="bi bi-star-fill"></i></span>
                  <% end %>
                </div>
              <div class=lessons>
                <span><%= user.lessons.count %> Lessons taught</span>
              </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
