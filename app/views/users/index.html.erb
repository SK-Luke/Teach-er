<div class="container main-container">
  <div id="banner">
    <span class="banner-title">Find a Teach äºŒ Today!</span>
    <span class="banner-teacher-count"><%= @users.count %> Teachers</span>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Consectetur saepe enim error, excepturi reprehenderit, impedit ullam maiores pariatur recusandae ipsum suscipit magni cum. Neque numquam, perspiciatis quia dicta perferendis nemo.</p>
  </div>
    <div class="row g-4">
      <% @users.each do |user| %>
        <% if user.role == 'Teacher' %>
          <div class="col-4">
            <%= link_to user do %>
              <div class="teacher-main" style="">
                <%# Teacher card left %>
                <div class="teacherCard-left">
                  <div class="avatar">
                    <%# put avatar here %>
                    <img class="avatar" src= <%= user.seed_avatar %> alt="teacher_avatar"> 
                  </div>
                  <div class="teacherCard-body">
                    <div class="teacherCard-top">
                      <div class="teacherCard-middle">
                        <div class="teacherCard-name">
                          <span><%= user.username %></span>
                        </div>
                        <div class="teacherCard-info">
                          <span>Role: <%= user.role %></span>
                        </div>
                        <div>
                          <span>From <%= user.location %>, Singapore</span>
                        </div>
                      </div>
                    </div>
                    <div class="teacherCard-bottom mt-4">
                      <%= render 'users/teachersubject', user: user %>
                      <%= render 'users/hourlyrate', user: user %>
                    </div>
                  </div>
                </div>
                <%# Teacher card right %>
                <div class="teacherCard-right mt-4">
                  <%= render 'users/ratings', user: user %>
                  <%= render 'users/bookings', user: user %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
